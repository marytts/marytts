  <!-- Reports generated when executing 'mvn site' -->
  <reporting>
    <plugins>
      <!-- Generate a number of generic site description pages: -->
	  <plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-project-info-reports-plugin</artifactId>
		<version>2.2</version>
	  </plugin>
	  <!-- Generate javadoc: -->
	  <plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-javadoc-plugin</artifactId>
		<version>2.7</version>
	  </plugin>
	  <!-- Look for duplicate code (CPD): -->
      <plugin>
        <artifactId>maven-pmd-plugin</artifactId>
        <version>2.5</version>
        <configuration>
                <linkXref>true</linkXref>
                <sourceEncoding>UTF-8</sourceEncoding>
                <minimumTokens>30</minimumTokens>
                <targetJdk>1.6</targetJdk>
				<reportSets>
				  <reportSet>
					<reports>
					  <!--report>pmd</report-->
					  <report>cpd</report>
					</reports>
				  </reportSet>
				</reportSets>
        </configuration>
      </plugin>
      <!-- Check style guidelines -->
      <!--plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <version>2.6</version>
      </plugin-->
      <!-- Look for typical programming mistakes: -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>findbugs-maven-plugin</artifactId>
        <version>2.3.1</version>
        <configuration>
          <findbugsXmlOutput>true</findbugsXmlOutput>
          <findbugsXmlWithMessages>true</findbugsXmlWithMessages>
          <xmlOutput>true</xmlOutput>
          <!--excludeFilterFile>findbugs-excludes.xml</excludeFilterFile-->
        </configuration>
      </plugin>
      <!-- Measure the test code coverage: -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>emma-maven-plugin</artifactId>
        <version>1.0-alpha-3</version>
      </plugin>
      <!-- Web page presenting unit test results: -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-report-plugin</artifactId>
        <version>2.7.1</version>
		<reportSets>
			<reportSet>
				<reports>
					<report>report-only</report>
				</reports>
			</reportSet>
		</reportSets>
      </plugin>
   	  <!-- Number of lines of code: -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>javancss-maven-plugin</artifactId>
        <version>2.0</version>
      </plugin>


    </plugins>
  </reporting>

  
</project>
