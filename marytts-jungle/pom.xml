		<!-- System dependencies - to be replaced where possible -->

		<dependency>
			<groupId>dummy</groupId>
			<artifactId>dummy3</artifactId>
			<version>1.0</version>
			<scope>system</scope>
			<systemPath>${basedir}/lib/JavaOpenAIR.jar</systemPath>
		</dependency>

		<dependency>
			<groupId>dummy</groupId>
			<artifactId>dummy10</artifactId>
			<version>1.0</version>
