##########################################################################
# MARY TTS configuration file.
##########################################################################

name = fa
fa.version = 4.3.0

locale = fa


###########################################################################
############################## The Modules  ###############################
###########################################################################
# For keys ending in ".list", values will be appended across config files,
# so that .list keys can occur in several config files.
# For all other keys, values will be copied to the global config, so
# keys should be unique across config files.


# Java classes to use as the modules, as a whitespace-separated list.
# These have to implement marytts.modules.MaryModule.
# For each input type + output type, only one Module may be listed
# across all components, or an Exception will be thrown.
# No particular order is required -- a processing pipeline from input data type
# to output data type will be computed on-line.

modules.classes.list = \
        marytts.modules.JPhonemiser(fa.)  \
        marytts.modules.MinimalisticPosTagger(fa,fa.) \

        marytts.modules.CARTDurationModeller(fa,fa.duration.,marytts.features.FeatureProcessorManager(fa)) \
        marytts.modules.CARTF0Modeller(fa,fa.f0.,marytts.features.FeatureProcessorManager(fa)) \




####################################################################
####################### Module settings  ###########################
####################################################################

# Phonemiser settings
fa.allophoneset = jar:/marytts/language/fa/lexicon/allophones.fa.xml
fa.lexicon = jar:/marytts/language/fa/lexicon/fa_lexicon.fst
fa.lettertosound = jar:/marytts/language/fa/lexicon/fa.lts
#fa.userdict = MARY_BASE/user-dictionaries/userdict-fa.txt

# POS tagger settings
fa.partsofspeech.fst = jar:/marytts/language/fa/tagger/fa_pos.fst
fa.partsofspeech.punctuation = ,.?!;



# Global prosody trees:
fa.duration.cart = MARY_BASE/lib/modules/fa/cap/dur.graph.mry

fa.f0.cart.left = MARY_BASE/lib/modules/fa/cap/f0.left.tree
fa.f0.cart.mid = MARY_BASE/lib/modules/fa/cap/f0.mid.tree
fa.f0.cart.right = MARY_BASE/lib/modules/fa/cap/f0.right.tree
fa.f0.featuredefinition = MARY_BASE/lib/modules/fa/cap/phoneUnitFeatureDefinition.txt

# Feature processor manager
featuremanager.classes.list = \
	marytts.features.FeatureProcessorManager(fa)
