##########################################################################
# MARY TTS configuration file.
##########################################################################

name = fr
fr.version = 4.3.1

# Declare "group names" as component that other components can require.
# These correspond to abstract "groups" of which this component is an instance.
provides = a-language

requires = \
    marybase \

###########################################################################
############################## The Modules  ###############################
###########################################################################

modules.classes.list = \
        marytts.language.fr.Phonemiser  \
        marytts.modules.MinimalisticPosTagger(fr,fr.) \ 

####################################################################
####################### Module settings  ###########################
####################################################################

fr.allophoneset = MARY_BASE/lib/modules/fr/lexicon/allophones.fr.xml
fr.lexicon = MARY_BASE/lib/modules/fr/lexicon/fr_lexicon.fst
fr.lettertosound = MARY_BASE/lib/modules/fr/lexicon/fr.lts
#fr.userdict = MARY_BASE/lib/modules/fr/lexicon/userdict.txt

# Minimalistic POS tagger settings
fr.partsofspeech.fst = MARY_BASE/lib/modules/fr/tagger/fr_pos.fst
fr.partsofspeech.punctuation = ,.?!;

# Feature processor manager
featuremanager.classes.list = \
	marytts.features.FeatureProcessorManager(fr)
	
