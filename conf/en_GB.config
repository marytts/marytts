name = en_GB
en_GB.version = 4.2.0

provides = a-language

requires = \
    marybase \

    en_GB-voice

###########################################################################
############################## The Modules  ###############################
###########################################################################
# For keys ending in ".list", values will be appended across config files,
# so that .list keys can occur in several config files.
# For all other keys, values will be copied to the global config, so
# keys should be unique across config files.


# Java classes to use as the modules, as a whitespace-separated list.
# These have to implement de.dfki.lt.mary.modules.MaryModule.
# For each input type + output type, only one Module may be listed
# across all components, or an Exception will be thrown.
# No particular order is required -- a processing pipeline from input data type
# to output data type will be computed on-line.

#modules.classes.list = \
#        marytts.modules.JPhonemiser(en_GB.) \ 
#        marytts.modules.DummyAllophones2AcoustParams 

modules.classes.list = \
        marytts.modules.JPhonemiser(en_GB.)  \
        marytts.language.en.JTokeniser \
        marytts.language.en.FreeTTSTokenToWords \
        marytts.language.en.Prosody \
        marytts.language.en.Utt2XMLWordsEn \
        marytts.language.en.XML2UttTokensEn \
        marytts.language.en.PronunciationModel \
        marytts.modules.OpenNLPPosTagger(en,en_GB.pos) \

        marytts.modules.CARTF0Modeller(en_GB,en_GB.f0.,marytts.features.FeatureProcessorManager(en_GB)) \
        marytts.modules.CARTDurationModeller(en_GB,en_GB.duration.,marytts.features.FeatureProcessorManager(en_GB)) \
    
        marytts.modules.PolynomialF0Modeller(en,english.f0.,marytts.language.en.features.FeatureProcessorManager) \


####################################################################
####################### Module settings  ###########################
####################################################################

en_GB.allophoneset = MARY_BASE/lib/modules/en/gb/lexicon/allophones.en_GB.xml
en_GB.userdict = MARY_BASE/lib/modules/en/gb/lexicon/userdict.txt
en_GB.lexicon = MARY_BASE/lib/modules/en/gb/lexicon/en_GB_lexicon.fst
en_GB.lettertosound = MARY_BASE/lib/modules/en/gb/lexicon/en_GB.lts

en_GB.pos.model = MARY_BASE/lib/modules/en/tagger/tag.bin.gz
en_GB.pos.tagdict = MARY_BASE/lib/modules/en/tagger/tagdict
en_GB.pos.tagdict.isCaseSensitive = true


en.prosody.paragraphdeclination = true

# rules for prediction of ToBI tones
en.prosody.tobipredparams = MARY_BASE/lib/modules/en/prosody/tobipredparams_english.xml
# rules for accent priorities of pos
en.prosody.accentPriorities = MARY_BASE/lib/modules/en/prosody/POSAccentPriorities.en.properties

# copy the word accents to the first accented syllable
en.prosody.syllableaccents = true

# rules for prediction of ToBI tones
#en_GB.prosody.tobipredparams = MARY_BASE/lib/modules/en/prosody/tobipredparams_en_GB.xml
# rules for accent priorities of pos
#en_GB.prosody.accentPriorities = MARY_BASE/lib/modules/en/prosody/POSAccentPriorities.en.properties

# copy the word accents to the first accented syllable
#en_GB.prosody.syllableaccents = true


# Defines how many units should be selected in cart on backtrace
# The higher the number, the closer synthesis comes to pure unit selection 
en_GB.cart.backtrace = 500 

# An FST containing word frequencies, in bins from 1 (rare) to 9 (frequent)
#en_GB.wordFrequency.fst = MARY_BASE/lib/modules/en/prosody/wordFrequencies-en.fst
#en_GB.wordFrequency.encoding = ISO-8859-1

# Global prosody trees for English:
en_GB.duration.cart = MARY_BASE/lib/modules/en/gb/cap/dur.graph.mry
#en_GB.f0.graph = MARY_BASE/lib/modules/en/gb/cap/f0contourtree.mry
#en_GB.f0.contours = MARY_BASE/lib/modules/en/gb/cap/syllableF0Polynomials.mry



en_GB.f0.cart.left = MARY_BASE/lib/modules/en/gb/cap/f0.left.tree
en_GB.f0.cart.mid = MARY_BASE/lib/modules/en/gb/cap/f0.mid.tree
en_GB.f0.cart.right = MARY_BASE/lib/modules/en/gb/cap/f0.right.tree
en_GB.f0.featuredefinition = MARY_BASE/lib/modules/en/gb/cap/phoneUnitFeatureDefinition.txt

# English feature processor manager
	
featuremanager.classes.list = \
	marytts.features.FeatureProcessorManager(en_GB)
